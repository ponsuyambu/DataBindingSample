<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="user" type="in.ponshere.androiddatabinding.User"/>
        <variable
            name="handler"
            type="in.ponshere.androiddatabinding.EventHandlingActivity"/>
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.firstName}"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.lastName}"/>
        <Button
            android:id="@+id/btnChangeName"
            android:onClick="@{handler::onChangeNameClicked}"
            android:text="Change first name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSave"
            android:onClick="@{(view)->handler.onSaveClicked(view,user)}"
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>